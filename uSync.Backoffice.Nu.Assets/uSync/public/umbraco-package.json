{
  "$schema": "../../../uSync.Site/umbraco-package-schema.json",
  "name": "uSync",
  "version": "14.0.0",
  "extensions": [
    {
      "type": "dashboard",
      "alias": "uSync.Dashboard",
      "name": "uSync",
      "js": "/App_Plugins/uSync/usync.js",
      "weight": -1,
      "meta": {
        "label": "uSync",
        "pathname": "usync-dashboard"
      },
      "conditions": [
        {
          "alias": "Umb.Condition.SectionAlias",
          "match": "Umb.Section.Settings"
        }
      ]
    },
    {
      "type": "sectionSidebarApp",
      "kind": "menu",
      "alias": "uSync.SidebarMenu",
      "name": "uSync SidebarMenu",
      "weight": 500,
      "meta": {
        "label": "Syncronization",
        "menu": "uSync.Menu"
      },
      "conditions": [
        {
          "alias": "Umb.Condition.SectionAlias",
          "match": "Umb.Section.Settings"
        }
      ]
    },
    {
      "type": "menu",
      "alias": "uSync.Menu",
      "name": "uSync Menu",
      "meta": {
        "label": "uSync"
      }
    },
    {
      "type": "menuItem",
      "alias": "uSync.Menu.Dashboard",
      "name": "uSync Dashboard Item",
      "weight": 300,
      "meta": {
        "label": "uSync",
        "icon": "umb:infinity",
        "entityType": "usync-dashboard",
        "menus": [ "uSync.Menu" ]
      }
    },
    {
      "type": "workspace",
      "alias": "uSync.Workspace",
      "name": "uSync Workspace",
      "js": "/App_Plugins/uSync/usync.js",
      "meta": {
        "label": "uSync View",
        "entityType": "usync-dashboard"
      }
    }
  ]
}